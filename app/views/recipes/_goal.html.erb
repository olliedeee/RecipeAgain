<% obj.each do |recipe| %>
<div class = "row">
  <div class="col-md-2"> 
  <section class="user_info_center">
  <%= link_to gravatar_for(recipe.user, size:120) %>
  <section> </div>
  
  <div class="col-md-8 well"> <br>
    <h4>Recipe Name: <%= link_to recipe.name, recipes_path(recipe) %></h4><br>
    <h4>Recipe Description:<%= truncate(recipe.description, length: 100) %></h4><br>
    <p> <span class="quiet"> <small>Created: <%= time_ago_in_words(recipe.created_at) %> ago by: <%= recipe.user.username %></span></p> </small>
    
    <hr>
    
     <% if logged_in? && current_user == recipe.user %>

          <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-default" %></div>
          <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete,
          data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-xs btn-danger" %> </div>
       <% end %>   
  </div>
</div><!-- end row -->




<% end %>